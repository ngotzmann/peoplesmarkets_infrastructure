template {
  source          = "{{ consul_template.data_dir }}/auth.conf.tpl"
  destination     = "{{ public_gateway.sites_dir }}/auth.conf"
  left_delimiter  = "[["
  right_delimiter = "]]"

  user  = "www-data"
  group = "www-data"
  perms = 0440

  exec {
    command = ["systemctl", "reload", "nginx"]
  }
}
