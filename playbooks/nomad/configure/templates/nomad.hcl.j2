datacenter    = "{{ data_center }}"
data_dir      = "{{ nomad.data_dir }}"
bind_addr     = "{{ ansible_eth1.ipv4.address }}"

addresses {
  http = "{{ localhost_ip }} {{ ansible_eth1.ipv4.address }}"
}

advertise {
  http = "{{ ansible_eth1.ipv4.address }}"
}

ports {
  http = {{ nomad.ports.http }}
  rpc  = {{ nomad.ports.rpc }}
  serf = {{ nomad.ports.serf }}
}

ui {
  enabled = true
  consul {
    ui_url = "https://{{ consul.ui_host }}"
  }
  vault {
    ui_url = "https://{{ vault.ui_host }}"
  }
}
